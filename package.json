{
	"name": "bug-bounty-platform",
	"version": "1.0.0",
	"description": "A simplified Bug Bounty Platform for showcasing backend development.",
	"main": "src/app.js",
	"type": "module",
	"scripts": {
		"start": "node src/app.js",
		"dev": "nodemon src/app.js",
		"test": "jest",
		"test:unit": "jest tests/utils tests/middleware tests/controllers",
		"test:integration": "set NODE_ENV=test && jest tests/integration --runInBand --setupFilesAfterEnv=./tests/setup.js",
		"test:seed": "node -e \"import('./tests/seed/testSeed.js').then(({seed}) => seed())\"",
		"lint": "eslint ."
	},
	"prisma": {
		"seed": "node prisma/seed.js"
	},
	"dependencies": {
		"@prisma/client": "^6.14.0",
		"bcrypt": "^5.1.1",
		"dotenv": "^17.2.1",
		"express": "^4.21.2",
		"express-rate-limit": "^8.1.0",
		"http-status-codes": "^2.3.0",
		"js-yaml": "^4.1.0",
		"jsonwebtoken": "^9.0.2",
		"pg": "^8.7.1",
		"swagger-jsdoc": "^6.2.8",
		"swagger-ui-express": "^5.0.1"
	},
	"devDependencies": {
		"@babel/preset-env": "^7.28.3",
		"@babel/register": "^7.28.3",
		"eslint": "^7.32.0",
		"jest": "^27.5.1",
		"nodemon": "^2.0.22",
		"prisma": "^6.14.0",
		"supertest": "^7.1.4"
	},
	"keywords": [
		"bug-bounty",
		"backend",
		"nodejs",
		"express",
		"postgresql"
	],
	"author": "PhoenixHO",
	"license": "MIT",
	"directories": {
		"doc": "docs",
		"test": "tests"
	}
}
